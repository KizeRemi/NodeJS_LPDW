<% include partials/header %>
<body>
<div  style="margin-top:100px" class="container">

    <form action="/songs" method="get">
        <div class="form-group">
          <div class="col-lg-2">
            <label for="selectSearch">Filtrer par  </label>
          </div>
          <div class="col-lg-4">
            <select class="form-control" name="filtre" id="filtre">
              <option value="title"> Title </option>
              <option value="album"> Album </option>
              <option value="artist"> Artist</option>
              <option value="year"> Year </option>
              <option value="bpm"> Bpm </option>
            </select>
          </div>
        </div>
        <div class="col-lg-4">
          <input type="text" class="form-control" name="filtreText" placeholder="">
        </div>
        <span class="input-group-btn">
          <input class="btn btn-default" type="submit" value="Valider">
        </span>
    </form>

    <% for (var i = 0; i < songs.length; i++) { %>

        <h1><%=songs[i].title%></h1>
        Album :  <a href="/songs/<%=songs[i].id%>"><%=songs[i].album%></a>
        Artist : <%=songs[i].artist%>
        <% if (songs[i].year) { %>
        Year : <%=songs[i].year%>
        <% } %>
        <% if (songs[i].bpm) { %>
        BPM : <%=songs[i].bpm%>
        <% } %>
        <a href="/songs/<%=songs[i].id%>">Afficher</a>
        <a href="/songs/edit/<%=songs[i].id%>">Editer</a>
    <!-- il t'a manquÃ© une variable pour valider si l'user en session est l'admin pour limiter l'affichage de ce lien -->
    <% } %>

</div>
<div class="container">
    <% if (user_admin) { %><br/>     <a href="/songs/add/">Ajouter une chanson</a>
    <% } %>
</div>
</body>

<% include partials/footer %>